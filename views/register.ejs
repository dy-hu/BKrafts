
<%- include("partials/header") %>


<div class="container hatneeded">
	<div class="row">
		<div class="col-md-12">
			<h1 style="text-align:center">
		Sign Up
		</h1>
		</div>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/register" method="POST">
				<label>Username</label>
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="JSmith">
				</div>
				<label>Password</label>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="johnsmith123">
				</div>
				<label>First Name</label>
				 <div class="form-group">
                    <input class="form-control" type="text" name="firstName" placeholder="John">
                </div>
				<label>Last Name</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="lastName" placeholder="Smith">
                </div>
				<label>Email</label>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="johnsmith@gmail.com">
                </div>
				<label>Profile Picture URL</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="avatar" placeholder="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Image_created_with_a_mobile_phone.png/1200px-Image_created_with_a_mobile_phone.png">
                </div>
				<label>Admin Code (leave blank)</label>
				<div class="form-group">
					<input class="form-control" type="password" name="adminCode" placeholder="admin code">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-dark">
					Submit
					</button>
				</div>
				<a href="/campgrounds">Go Back</a>
			</form>
		</div>
	</div>
	
</div>

<%- include("partials/footer") %>