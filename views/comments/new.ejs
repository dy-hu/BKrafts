<%- include("../partials/header") %>
<div class="container hatneeded">
	<div class="row">
		<div class="col-md-12">
			<h1 style="text-align:center">
		Add New Comment to <%=custom.name%>
		</h1>
		</div>
		<div style="width: 30%; margin:25px auto;">
			<form action="/customs/<%=custom._id%>/comments" method="POST">
				<label>Comment Text</label>
				<div class="form-group">
					<input class="form-control" type = "text" name="comment[text]" placeholder = "This is really cool!">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-block btn-success">
					Submit!
				</button>
				</div>
		</form>	
				<a href="/customs">Go Back</a>
		</div>
		
	</div>	
</div>


<%- include("../partials/footer") %>