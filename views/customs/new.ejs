<%- include("../partials/header") %>
<div class="container hatneeded">
	<div class="row">
		<div class="col-md-12">
			<h1 style="text-align:center">
		List a New Piece
		</h1>
		</div>
		<div style="width: 30%; margin:25px auto;">
			<form action="/customs" method="POST">
				<label>Name</label>
				<div class="form-group">
					<input class="form-control" type = "text" name="name" placeholder = "John Smith">
				</div>
				<label>Image URL</label>
				<div class="form-group">
					<input class="form-control" type = "text" name="image" placeholder = "https://images.pexels.com/photos/45241/tent-camp-night-star-45241.jpeg?auto=compress&cs=tinysrgb&h=350">
				</div>
				<label>Description</label>
				<div class="form-group">
					<input class="form-control" type = "text" name="description" placeholder = "Los Angeles Lakers Logo">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-block btn-primary">
					Submit!
				</button>
				</div>
		</form>	
				<a href="/customs">Go Back</a>
		</div>
		
	</div>	
</div>


<%- include("../partials/footer") %>